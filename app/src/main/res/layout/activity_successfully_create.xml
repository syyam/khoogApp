<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".partner.finishRegistration">

    <ImageView
        android:id="@+id/imgcheck"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/tick"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/tv1"
        android:fontFamily="@font/font"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mubarak!"
        android:textSize="30dp"
        android:textColor="@color/khoogColor"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have successufully created an event"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/font"
        android:textColor="#222"/>
    <TextView
        android:padding="20dp"
        android:fontFamily="@font/font"
        android:id="@+id/teamMessage"
        android:layout_below="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One of our support team member will shortly contact you."
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="#888"/>



    <LinearLayout
        android:layout_below="@id/teamMessage"
        android:id="@+id/btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <Button
            android:id="@+id/pBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F9AD19"
            android:textSize="16sp"
            android:fontFamily="@font/font"
            android:gravity="center_horizontal|center_vertical"
            android:text="Show Event"
            android:textColor="#FFF" />

    </LinearLayout>



</RelativeLayout>