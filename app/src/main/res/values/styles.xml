<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="generalnotitle" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">#F9AD19</item>
    </style>

    <style name="generalnotitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="generalnotitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="generalnotitle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/khoogColor</item>
    </style>


    <style name="CardInput">
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:layout_marginRight">@dimen/items_inbetween</item>
        <item name="android:layout_marginTop">@dimen/items_inbetween</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/items_inbetween_medium</item>
    </style>

</resources>
